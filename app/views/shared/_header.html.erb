<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class="container fixed-top">
	<div class="bland-logo">
		<%= link_to image_tag("facebook_cover_photo_1.png", class:"craftlink-icon", size:'200x80'), "/"%>
	</div>
	<div class='nav'>
    <ul class='lists-left'>
      <li><%= link_to '投稿する', new_job_path, class: "post-list" %></li>
    </ul>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to (current_user.nickname.present? ? current_user.nickname : current_user.first_name + "さん"), "#", class: "user-nickname" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>  
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>