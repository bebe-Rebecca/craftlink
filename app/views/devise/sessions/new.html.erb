<%= form_with class: 'registration-main', model: @user, url: user_session_path, local: true do |f| %>
  <div class='body'></div>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <div class="grad"></div>
    <div class="header">
      <div>CLAFT<span>LINK</span></div>
    </div>
    <br>
    <div class="login_form">
      <%= f.email_field :email, class:"input-default1", id:"email", placeholder:"メールアドレス", autofocus: true %><br>
      <%= f.password_field :password, class:"input-default2", id:"password", placeholder:"パスワード" %><br>
      <%= f.submit "ログイン" ,class:"login-btn" %>
    </div>
<% end %>
